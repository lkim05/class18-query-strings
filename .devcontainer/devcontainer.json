// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php
{
	"name": "PHP",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/php:1-8.4-bookworm",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to Codespaces
		"codespaces": {
			"openFiles": [
				"README.md"
			]
		},
		// Configure properties specific to VS Code.
		"vscode": {
			"settings": {
				"[css]": {
					"editor.defaultFormatter": "vscode.css-language-features"
				},
				"[html]": {
					"editor.defaultFormatter": "vscode.html-language-features"
				},
				"[javascript][javascriptreact]": {
					"editor.defaultFormatter": "vscode.typescript-language-features"
				},
				"[php]": {
					"editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
				},
				"breadcrumbs.enabled": true,
				"css.validate": false,
				"debug.console.collapseIdenticalLines": false,
				"debug.console.wordWrap": true,
				"debug.internalConsoleOptions": "openOnSessionStart",
				"debug.openDebug": "openOnDebugBreak",
				"debug.openExplorerOnEnd": true,
				"debug.toolBarLocation": "commandCenter",
				"editor.formatOnSave": true,
				"editor.minimap.maxColumn": 80,
				"editor.minimap.showSlider": "always",
				"editor.stickyScroll.enabled": true,
				"editor.wordWrap": "on",
				"explorer.compactFolders": false,
				"files.exclude": {
					".devcontainer": true,
					".git": true,
					".gitattributes": true,
					".gitignore": true
				},
				"files.insertFinalNewline": true,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
				"git.autofetch": true,
				"github.copilot.editor.enableAutoCompletions": false,
				"github.copilot.enable": {
					"*": false
				},
				"html.format.wrapLineLength": 0,
				"intelephense.diagnostics.enable": false,
				"json.format.keepLines": true,
				"markdownlint.config": {
					"MD012": false,
					"MD013": false,
					"MD022": false,
					"MD025": false,
					"MD033": false,
					"MD036": false,
					"MD037": false,
					"MD040": false
				},
				"php.validate.enable": false,
				"todohighlight.enableDiagnostics": true,
				"todohighlight.include": [
					"**/*.js",
					"**/*.jsx",
					"**/*.ts",
					"**/*.tsx",
					"**/*.html",
					"**/*.css",
					"**/*.scss",
					"**/*.php",
					"**/*.rb",
					"**/*.txt",
					"**/*.mdown",
					"**/*.md",
					"**/*.mjs",
					"**/*.cjs"
				],
				"webvalidator.validateOnSave": false,
				"workbench.activityBar.visible": true,
				"workbench.editor.highlightModifiedTabs": true,
				"workbench.editor.wrapTabs": true,
				"workbench.localHistory.maxFileEntries": 200,
				"workbench.localHistory.maxFileSize": 1024,
				"workbench.tree.indent": 18
			},
			"extensions": [
				"adpyke.vscode-sql-formatter",
				"pucelle.vscode-css-navigation",
				"ecmel.vscode-html-css",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-checkbox",
				"davidanson.vscode-markdownlint",
				"jgclark.vscode-todo-highlight",
				"celianriboulet.webvalidator",
				"yy0931.vscode-sqlite3-editor",
				"anweber.vscode-httpyac",
				"anweber.httpbook",
				"analytic-signal.preview-pdf",
				"mushan.vscode-paste-image",
				"kisstkondoros.vscode-gutter-preview",
				"sndst00m.vscode-native-svg-preview",
				"GitHub.copilot"
			]
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 8080 ],
	"portsAttributes": {
		"8080": {
			"label": "server"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"waitFor": "onCreateCommand",
	"postStartCommand": "git config --global pull.rebase false"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
